<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="24dp"
    android:fitsSystemWindows="true">

    <!-- Teacher Profile Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="32dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTeacherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/professor_name"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="font/poppins_bold"
                android:letterSpacing="0.02"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/faculty_department"
                android:textSize="14sp"
                android:textColor="@color/white_alpha_80"
                android:fontFamily="font/poppins_regular"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/ivTeacherProfile"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_person"
            android:background="@drawable/circle_background_white"
            android:padding="14dp"
            android:contentDescription="@string/profile_icon"/>
    </LinearLayout>

    <!-- Current Session Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_session"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:letterSpacing="0.1"
        android:fontFamily="font/poppins_bold"
        android:layout_marginBottom="12dp"
        android:background="@drawable/pill_background_white_alpha"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardPreventCornerOverlap="true"
        android:layout_marginBottom="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">

            <!-- Class Info Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_timetable"
                    app:tint="@color/primary"
                    android:contentDescription="@string/timetable_icon"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tvCurrentClass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="font/poppins_bold"
                        android:maxLines="2"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/tvSubjectCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="---"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="font/poppins_regular"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/primary_light"
                android:layout_marginBottom="20dp"
                android:alpha="0.3"/>

            <!-- Session Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <!-- Room -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_location"
                        app:tint="@color/primary"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/location_icon"/>

                    <TextView
                        android:id="@+id/tvRoom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/room_placeholder"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="font/poppins_medium"/>
                </LinearLayout>

                <!-- Time -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_timetable"
                        app:tint="@color/primary"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/time_icon"/>

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/time_placeholder"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="font/poppins_medium"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Students Count -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="28dp"
                android:background="@drawable/pill_background_primary"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_person"
                    app:tint="@color/white"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="@string/students_icon"/>

                <TextView
                    android:id="@+id/tvStudentCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/students_count_placeholder"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:fontFamily="font/poppins_semibold"/>
            </LinearLayout>

            <!-- Monitor Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewAttendance"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/monitor_live_attendance"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_shield"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="20dp"
                app:iconTint="@color/white"
                android:fontFamily="font/poppins_semibold"
                style="@style/Widget.MaterialComponents.Button"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Logout Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/logout"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_logout"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconSize="20dp"
        app:iconTint="@color/white"
        android:backgroundTint="#F56565"
        android:fontFamily="font/poppins_semibold"
        style="@style/Widget.MaterialComponents.Button"/>

</LinearLayout>