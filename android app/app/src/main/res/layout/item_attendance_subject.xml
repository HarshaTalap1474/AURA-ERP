<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Subject Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSubjectHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subject_name_placeholder"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="font/poppins_bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tvSubjectCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[ 000000 ]"
                    android:textColor="@color/primary"
                    android:textSize="12sp"
                    android:fontFamily="font/poppins_medium"
                    android:layout_marginTop="2px"/>
            </LinearLayout>

            <!-- Status Badge -->
            <TextView
                android:id="@+id/tvAttendanceBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75%"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:fontFamily="font/poppins_semibold"
                android:background="@drawable/pill_background_primary"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"/>
        </LinearLayout>

        <!-- Teacher Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16px">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_person"
                app:tint="@color/text_secondary"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/teacher_icon"/>

            <TextView
                android:id="@+id/tvTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/teacher_name_placeholder"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:fontFamily="font/poppins_regular"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <!-- Stats and Progress -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvStats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/stats_placeholder"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:fontFamily="font/poppins_medium"/>

            <!-- Mini Progress Bar -->
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/attendance"
                        android:textSize="10sp"
                        android:textColor="@color/text_hint"
                        android:fontFamily="font/poppins_regular"/>

                    <TextView
                        android:id="@+id/tvPercentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="75%"
                        android:textSize="10sp"
                        android:textColor="@color/text_hint"
                        android:fontFamily="font/poppins_semibold"/>
                </LinearLayout>

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressSubject"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    app:trackColor="@color/primary_light"
                    app:trackCornerRadius="3dp"
                    app:indicatorColor="@color/primary"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary_light"
            android:layout_marginTop="16dp"
            android:alpha="0.2"/>

        <!-- Action Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/view_details"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:fontFamily="font/poppins_medium"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_eye"
                android:drawableTint="@color/primary"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="@string/view_details"
                app:tint="@color/primary"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>